<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bpzj.mybatisNew.dao.StudentDao">
    <select id="findAll" resultType="Student">
--         SELECT id,create_at createAt,update_at updateAt,name,qq,type,entry_time entryTime,
--         school,student_id studentId, link, oath,brother,knowfrom FROM sign
        SELECT * FROM sign
    </select>

    <insert id="add" parameterType="com.bpzj.mybatisNew.domain.Student"
    useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sign VALUES(#{id},NOW(),NOW(),#{name},#{qq},#{type},#{entryTime}," +
            "#{school},#{studentId},#{link},#{oath},#{brother},#{knowFrom})
    </insert>

    <update id="updateById">
        UPDATE sign SET update_at=NOW(), name=#{name}, oath=#{oath} WHERE id=#{id}
    </update>

    <delete id="deleteById">
        DELETE FROM sign WHERE id=#{id}
    </delete>

</mapper>